<center>
<h1> Merchant Invoices Show Page </h1>

<div class="total_revenue"
  <p>Total Revenue: <%=@invoice.invoice_revenue %></p>
  <p>Discounted Revenue: <%=@invoice.discounted_revenue %></p>
</div>

<div class="invoice_information">
  <p>Invoice Id: <%= @invoice.id %></p>
  <p>Invoice Status: <%= @invoice.status %></p>
  <p>Created At: <%= @invoice.format_created_at(@invoice.created_at) %></p>
  <p>Customer Name: <%= @invoice.customer_name %></p>
</div>

<div class="invoice_items_information">
  <% @invoice.invoice_items.each do |line_item| %>
    <div id="id-<%=line_item.id%>"
      <p>Item name: <%= line_item.item.name %></p>
      <p>Item quantity: <%= line_item.quantity %></p>
      <p>Item price sold at: $<%= line_item.item.display_price %></p>
      <p>Item status: <%= line_item.status %></p>
      <p>Item discount: <%= line_item.best_discount %>
      <%= link_to "View Discount", merchant_bulk_discount_path(line_item.best_discount) %>  </p>
      <%= form_with url: merchant_invoice_path(@merchant.id, @invoice.id), method: :patch, local: true do |form| %>
            <%= form.hidden_field :ii_id, value: ii.id %>
            <%= form.select :status, options_for_select([:pending, :packaged, :shipped], ii.status) %>
            <%= form.submit "Update Item Status" %>
          <% end %>
    </div>
  <% end %>
</div>
</center>
